{% extends 'TopGamesBundle::layout.html.twig' %}

{% block title %} {{ parent()}} Listado de plataformas{% endblock title %}

{% block content -%}
    <h1>Plataforma list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Color</th>
                <th>Letra blanca</th>
                <th>Preview</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('plataforma_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.letraBlanca }}</td>
              {% if entity.letraBlanca == true %}
                  <td><b style="color: white; background-color: {{ entity.color }}">{{ entity.nombre }}</b></td>
              {% else %}
                  <td><b style="background-color: {{ entity.color }}">{{ entity.nombre }}</b></td>
              {% endif %}
               
                <td>
                <ul>
                    <li>
                        <a href="{{ path('plataforma_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('plataforma_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('plataforma_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
 
{% endblock  content %}
